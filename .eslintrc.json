{
  "env": {
    "es6": true,
    "node": false,
    "browser": false
  },
  "globals": {
    "console": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["build/"],
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["warn", "always"],
    "no-console": ["warn"],
    "no-debugger": ["warn"],
    "no-unused-vars": "warn"
  }
}
